<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <title>{% block title %}{{ page.title }}{% endblock %}</title>

        {% block stylesheets %}
            <link href="/bundles/app/css/bootstrap.min.css" rel="stylesheet">
            <link href="/bundles/app/css/main.css" rel="stylesheet">
            <link href="/bundles/eightpage/css/editor.css" rel="stylesheet">

            {{ eight_stylesheets() }}
        {% endblock %}

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body class="{{ eight_body_class() }}">
        {% block body %}
            <div id="main-container" class="container-fluid">
                <div id="inner-container">
                    {{ render_page_content() }}
                </div>
            </div>
        {% endblock %}

        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
            <script src="/bundles/app/js/bootstrap.min.js"></script>
            <script src="/bundles/app/js/main.js"></script>
            <script src="/bundles/eightpage/js/editor.js"></script>

            {{ eight_javascripts() }}
        {% endblock %}
    </body>
</html>