<div class="page-toolkit">
    <a title="Show/Hide widget editor" id="btn-edit-layout-mode" class="btn btn-primary" onclick="$('body').toggleClass('toolkit');" href="javascript:;">
        <span class="glyphicon glyphicon-wrench"></span>
    </a>

    <span id="page-specs">{{ page|raw }} || path: {{ page.route.path }} || controller: {{ page.route.controller }} || layout: {{ page.layout ? page.layout : 'default' }}</span>
</div>

<div id="add-block-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add new block</h4>
            </div>
            <div class="modal-body">
                <select>
                {% for widget in widgets %}
                    <option value="{{ widget.name }}">{{ widget.label }}</option>
                {% endfor %}
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary add-block-btn">ADD</button>
            </div>
        </div>
    </div>
</div>


<script type="text/html" id="toolbar-template">
<div>
    <div class="eight-toolbar eight-frame-element">
        <a title="Edit block" class="eight-ui-element btn btn-xs btn-default btn-edit-variable" href="javascript:;" data-toggle="tooltip">
            <span class="glyphicon glyphicon-pencil"></span>
        </a>

        <a title="Sort block" href="javascript:;" class="eight-ui-element btn btn-xs btn-default btn-sort-block" data-toggle="tooltip">
            <span class="glyphicon glyphicon-resize-vertical"></span>
        </a>

        <a title="Delete block" class="eight-ui-element btn btn-default btn-xs btn-remove-block" data-toggle="tooltip">
            <span class="glyphicon glyphicon-remove"></span>
        </a>

        <a title="Disable block" class="btn btn-xs btn-default btn-disable-block eight-ui-element" href="javascript:;" data-toggle="tooltip">
            <span class="glyphicon glyphicon-ban-circle"></span>
        </a>

        <a title="Enable block" class="btn btn-xs btn-default btn-enable-block eight-ui-element" href="javascript:;" data-toggle="tooltip">
            <span class="glyphicon glyphicon-eye-open"></span>
        </a>
    </div>
</div>
</script>




